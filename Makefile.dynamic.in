prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
libdir = @libdir@
mandir = @mandir@
includedir = @includedir@

top_builddir = .

INSTALL = @INSTALL@

pfaedit: libgunicode libgdraw
	( cd pfaedit ; $(MAKE) )

libgunicode:
	( cd Unicode ; $(MAKE) )

libgdraw:
	( cd gdraw ; $(MAKE) )

clean:
	-rm -f gdraw/*.o pfaedit/*.o Unicode/*.o

install:
# You may need to be root to do the install
	cp pfaedit/pfaedit/.libs $(bindir)
	cp pfaedit/pfaedit.*.ui $(bindir)
	cp pfaedit/pfaedit.1 $(mandir)/man1
	-rm $(libdir)/libgdraw.so* $(libdir)/libgunicode.so.*
	cp .libs/*.so.1.0 $(libdir)
	ln -s libgdraw.so.1.0 $(libdir)/libgdraw.so.1
	ln -s libgdraw.so.1 $(libdir)/libgdraw.so
	ln -s libgunicode.so.1.0 $(libdir)/libgunicode.so.1
	ln -s libgunicode.so.1 $(libdir)/libgunicode.so
