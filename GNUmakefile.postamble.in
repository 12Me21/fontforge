after-clean::
	$(MAKE) -C libltdl clean
	$(MAKE) -C pyhook clean

after-distclean::
	$(MAKE) -C libltdl distclean
	$(MAKE) -C pyhook distclean
	rm -f libltdl/GNUmakefile
	rm -f GNUmakefile GNUmakefile.postamble overall_common.mk
	rm -f Makefile
	rm -f fontforge.pc
	rm -f inc/config.h
	rm -f config.log config.cache
	rm -f config.status
	rm -f tests/atconfig tests/atlocal tests/*.py
	rm -rf Unicode/.deps gutils/.deps gdraw/.deps fontforge/.deps

