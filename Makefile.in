prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
libdir = @libdir@
mandir = @mandir@
includedir = @includedir@
sharedir = $(prefix)/share/pfaedit

srcdir = @srcdir@
top_builddir = .

INSTALL = @INSTALL@

pfaedit: libgunicode libgdraw
	$(MAKE) -C pfaedit

libgunicode:
	$(MAKE) -C Unicode

libgdraw:
	$(MAKE) -C gdraw

clean:
	$(MAKE) -C pfaedit clean
	$(MAKE) -C Unicode clean
	$(MAKE) -C gdraw clean

distclean cleaner:
	$(MAKE) -C pfaedit distclean
	$(MAKE) -C Unicode distclean
	$(MAKE) -C gdraw distclean
	rm Makefile config.cache config.log config.status libtool

install: $(sharedir)
# You may need to be root to do the install
# remove any files from old installs that put the ui in bin
	-rm -f $(bindir)/pfaedit*.ui
	cp pfaedit/pfaedit $(bindir)
	cp pfaedit/pfaedit.*.ui $(sharedir)
	cp $(srcdir)/pfaedit/pfaedit.1 $(mandir)/man1
#	cp $(srcdir)/*.cidmap $(sharedir)

uninstall:
	-rm $(bindir)/pfaedit
	-rm $(sharedir)/pfaedit.*.ui
	-rm $(mandir)/man1/pfaedit.1
#	-rm $(sharedir)/*.cidmap

$(sharedir):
	mkdir -p $(sharedir)
