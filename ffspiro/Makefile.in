prefix = @prefix@
exec_prefix = @exec_prefix@

srcdir = @srcdir@
top_srcdir = @top_srcdir@
top_builddir = .
VPATH = @srcdir@
bindir = @bindir@
libdir = @libdir@

FFSPIRO_VERSION=0
FFSPIRO_REVISION=1
FFSPIRO_AGE=0

LIBTOOL = @LIBTOOL@
INSTALL = @INSTALL@
CC = @CC@

_CFLAGS = -I$(srcdir)/../inc -I$(srcdir) -I. -I$(srcdir)/../fontforge \
    @WFLAGS@ $(X_CFLAGS) \
    @DEFS@ '-DSHAREDIR="$(sharedir)"' -DLIBDIR='"$(libdir)"' \
    @CPPFLAGS@ '-DPREFIX="@prefix@"'
CFLAGS = @CFLAGS@ $(_CFLAGS)

O=lo
LIB_FF_SPIRO_OBJECTS = spiro.$O spiro2ff.$O bezctx_ff.$O bezctx.$O

LIBS = -lm

all: libffspiro.la


clean:
	-rm -rf .libs *.la *.lo

distclean: clean
	-rm -rf Makefile
	-rm -rf bezctx.c bezctx.h bezctx_intf.h spiro.c spiro.h zmisc.h README-RaphLevian gpl.txt

%.lo: %.c
	$(LIBTOOL) --mode=compile $(CC) $(CFLAGS) -c $<

libffspiro.la: $(LIB_FF_SPIRO_OBJECTS)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -no-undefined @LDFLAGS@  -o libffspiro.la $(LIB_FF_SPIRO_OBJECTS) $(LIBS) \
	    @LIBS@ \
	    -rpath $(libdir) -version-info $(FFSPIRO_VERSION):$(FFSPIRO_REVISION):$(FFSPIRO_AGE)

install: all
	mkdir -p $(DESTDIR)$(libdir)
	$(LIBTOOL) --mode=install $(INSTALL) -c libffspiro.la $(DESTDIR)$(libdir)/libffspiro.la
	$(LIBTOOL) --mode=finish $(DESTDIR)$(libdir)
