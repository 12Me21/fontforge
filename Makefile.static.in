prefix = @prefix@
exec_prefix = @exec_prefix@

bindir = @bindir@
libdir = @libdir@
mandir = @mandir@
includedir = @includedir@
sharedir = /usr/share/pfaedit

top_builddir = .

INSTALL = @INSTALL@

pfaedit: libgunicode libgdraw
	( cd pfaedit ; $(MAKE) )

libgunicode:
	( cd Unicode ; $(MAKE) )

libgdraw:
	( cd gdraw ; $(MAKE) )

clean:
	-rm -f gdraw/*.o pfaedit/*.o Unicode/*.o

install:
# You may need to be root to do the install
	cp pfaedit/pfaedit $(bindir)
	cp pfaedit/pfaedit.*.ui $(bindir)
	cp pfaedit/pfaedit.1 $(mandir)/man1
